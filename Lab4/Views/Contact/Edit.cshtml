@{
}
<form asp-action="Edit" asp-controller="Contact" method="post">
    <div>
        <label asp-for="Name"></label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Name" />
    </div>

    <div>
        <label asp-for="Email"></label>
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Email" />
    </div>

    <div>
        <label asp-for="Subject"></label>
        <div>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Subject" />
    </div>

    <div>
        <label asp-for="Message"></label>
        <div>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Message" />
    </div>

    <div>
        <label asp-for="Priority"></label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select asp-for="Priority" class="form-control" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
    </div>

    <div>
        <label asp-for="Date"></label>
        <div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Date" />
    </div>

    <button type="submit">Edytuj</button>
</form>