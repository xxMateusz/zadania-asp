@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>
    lista kontaktow
</h1>
<a class="btn-outline-primary" asp-area="" asp-controller="Contact" asp-action="Create">Dodaj Kontakt</a>
@if (Model.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    Imie
                </th>
                <th>
                    Email
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="@(item.Value.Name.EndsWith("a")? "text-primary":"text-secondary")">
                        @item.Value.Name
                    </td>
                    <td>
                        @item.Value.Email
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegół"></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuwanie</a>

                    </td>
                </tr>
            }
        </tbody>
</table>
}